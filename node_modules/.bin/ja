#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/-u" ]; then
  exec "$basedir/-u" DEBUG node "$basedir/../ja/cli/ja.js" "$@"
else 
  exec -u DEBUG node "$basedir/../ja/cli/ja.js" "$@"
fi
